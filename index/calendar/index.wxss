/* index/calendar/index.wxss */

/* 顶部 title */

.hearder-date-title {
  position: relative;
  width: 700rpx;
  font-family: PingFang-SC-Regular;
  font-size: 40rpx;
  color: #282828;
  text-align: left;
  margin: 10rpx auto;
}

.lt-arrow, .rt-arrow {
  position: absolute;
  top: 1rpx;
  height: 60rpx;
}

.lt-arrow image, .rt-arrow image {
  width: 14rpx;
  height: 26rpx;
}

.lt-arrow {
  left: 300rpx;
}

.rt-arrow {
  right: 10rpx;
}

/* 星期 行  */

.header-weekday {
  font-size: 0;
  padding: 0 20rpx;
}

.header-weekday>view {
  display: inline-block;
  width: 14.285%;
  color: #333;
  font-size: 30rpx;
  text-align: center;
  border-bottom: 1px solid #d0d0d0;
  padding: 10rpx 0;
}

.weekMark {
  position: relative;
}

.weekMark view {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  border-bottom: 1px solid #22a7f6;
}

/* 日期 */

.date-box {
  font-size: 0;
  padding: 10rpx 20rpx;
  color: #020202;
}

.date-box>view {
  position: relative;
  display: inline-block;
  width: 14.285%;
  font-size: 40rpx;
  text-align: center;
  vertical-align: middle;
  margin: 5rpx 0;
  height: 70rpx;
  line-height: 70rpx;
}

.date-box .deActMonth {
  color: #d0d0d0;
}

.date-box .between {
  background-color: #e1efd5;
}

.date-box .Selected {
  background-color: #e1efd5;
  box-sizing: border-box;
}

.date-box .Selected .date-head {
  width: 70rpx;
  height: 70rpx;
  line-height: 70rpx;
  border-radius: 50%;
  color: #fff;
  background-color: #60b848;
  margin: 0 auto;
}

.date-box .startDay {
  border-radius: 50% 0 0 50%;
  width: 10%;
  /* margin-left: 4.285%; */
}

.date-box .endDay {
  border-radius: 0 50% 50% 0;
  width: 10%;
  margin-right: 4.285%;
}

.nowDay .date-head {
  text-align: center;
  color: #22a7f6;
  margin: 0 auto;
}

.date-info {
  font-size: 22rpx;
  padding: 15rpx 0;
}

.nowDay .date-info {
  color: #22a7f6;
}
